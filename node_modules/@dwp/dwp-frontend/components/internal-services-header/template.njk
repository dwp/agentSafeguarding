<header class="govuk-header dwp-header {%- if params.classes %} {{ params.classes }}{% endif %}" 
{%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}
data-module="govuk-header">
  <div class="dwp-header__container {%- if params.container %} dwp-header__container--constrained{% endif %}">
    {% if params.action %}
      <div class="dwp-header__container--service-name">
        <a href="{{ params.serviceHref }}" class="govuk-header__link govuk-header__link--service-name">
          {{ params.name if params.name else "Internal Services Header" }}
        </a>
      </div>
      <div class="dwp-header__container--action">
        <a href="{{ params.actionHref }}" class="govuk-header__link action">
          {{ params.action }}
        </a>  
      </div>
    {% else %}
      <a href="{{ params.serviceHref }}" class="govuk-header__link govuk-header__link--service-name">
        {{ params.name if params.name else "Internal Services Header" }}
      </a>
    {% endif %}
  </div>
</header>