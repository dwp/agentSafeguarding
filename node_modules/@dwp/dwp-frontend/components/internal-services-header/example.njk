        container: false
    }) }}

    <h2>with Container</h2>
    {{ dwpHeader({
        name: "Apply for a benefit",
        serviceHref: "#",
        action: "Sign out",
        actionHref: "#",
        container: true
    }) }}
    
{% endblock %}