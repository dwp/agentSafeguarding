{% from "./macro.njk" import dwpHeader %}

{% block title %}
    Internal Header
{% endblock %}

{% block content %}

    <h2>Default</h2>
    {{ dwpHeader() }}

    <h2>with Action</h2>
    {{ dwpHeader({
        name: "Apply for a benefit",
        serviceHref: "#",
        action: "Sign out",
