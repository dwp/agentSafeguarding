{% extends "../../partials/layout.njk" %}

{% from "./macro.njk" import dwpKeyDetailsBar %}

{% block title %}
    Key details bar
{% endblock %}

{% block content %}
    <h1>Key Details Bar</h1>
    <h2>primary + secondary identifier</h2>
    {{ dwpKeyDetailsBar({
        primaryIdentifier: {
            text: 'Name:',
            value: 'Albus Dumbledore'
        },
        secondaryIdentifier: {
            text: 'Nino:',
            value: 'QQ 12 34 56 X'
        }
    }) }}

    <h2>with additional data - seconday and status</h2>
    {{ dwpKeyDetailsBar({
        primaryIdentifier: {
            text: 'Name:',
            value: 'Severus Snape'
        },
        additionalData: [
            {
                value: "4 June 1972",
                text: "Date of birth:"
            },
            {
                value: "07777 900 900",
                text: "Mobile number:"
            },
            {
                value: "Welsh speaker",
                text: "Language:"
            }
        ]
    }) }}

    <h2>with status</h2>
    {{ dwpKeyDetailsBar({
        primaryIdentifier: {
            text: 'Name:',
            value: 'Minerva McGonagall'
        },
        status: {
            text: 'Claim status:',
            value: 'completed'
        }
    }) }}

    <h2>with custom attributes</h2>
    {{ dwpKeyDetailsBar({
        primaryIdentifier: {
            text: 'Name:',
            value: 'Remus Lupin'
        },
        status: {
            text: 'Claim status:',
            value: 'completed'
        },
        attributes: {
            'data-custom': 'data custom value',
            'data-custom-two': 'data custom two value'
        },
        additionalData: [
            {
                value: "data custom value",
                text: "data-custom:"
            },
            {
                value: "data custom two value",
                text: "data-custom-two:"
            }
        ]
    }) }}

    <h2>custom classes</h2>
    {{ dwpKeyDetailsBar({
        primaryIdentifier: {
            text: 'Name:',
            value: 'Sybill Trelawney'
        },
        classes: 'ex-bg-purple',
        additionalData: [
            {
                value: "24 September 1960",
                text: "Date of birth:"
            },
            {
                value: "078888 111 222",
                text: "Mobile number:"
            },
            {
                value: "English speaker",
                text: "Language:"
            }
        ]
    }) }}
    
{% endblock %}